    "@material-ui/styles": "^4.7.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "awesome-debounce-promise": "^2.1.0",
    "axios": "^0.19.0",
    "chart.js": "^2.9.3",
    "dotenv": "^8.2.0",
    "leaflet": "^1.6.0",
    "mdx.macro": "^0.2.9",
    "node-sass": "^7.0.0",
    "react": "^16.12.0",
